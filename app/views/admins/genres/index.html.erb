<style>
th {
	background: #FFC7AF;
}
</style>

<div class="row" style= "width: 80%; margin: 20px auto;">
	<div class="form-horizontal">
		<h4 style="margin-bottom: 20px; border-left: 2px solid #2D6F4C; padding: 10px;">ジャンル追加・一覧画面</h4>
	</div>
</div>
<div class="container">
	<div class="col-md-6" style="margin-bottom: 50px;">
		<%= form_with(model: @genre, url:admins_genres_path,  local: true)  do |f| %>
		<%= f.label :ジャンル %>
		<%= f.text_field :name %>
		<label>
			<%= f.radio_button :status, :published %>
			<%= f.label :status, "無効"%>
		</label>
		<label>
			<%= f.radio_button :status, :draft %>
			<%= f.label :status, "有効" %>
		</label>
		<%= f.submit "変更を保存", class:"btn-outline-primary btn-sm"%>
		<% end %>
	</div>
	<div class="col-md-6">
		<table class="table">
			<tr>
				<th>ジャンル</th>
				<th>状態</th>
				<th></th>
			</tr>
			<%if @genres.present? %>
			<% @genres.each do |genre| %>
			<tr>
				<td><%= genre.name %></td>
				<td><%= genre.status_i18n %></td>
				<td><%= link_to "編集する",edit_admins_genre_path(genre) %></td>
			</tr>
			<% end %>
			<% end %>
		</table>
	</div>
</div>