<div>
	<h1>ジャンル追加•一覧画面</h1>
	<div>
		<%= form_with(model: @genre, url:admins_genres_path,  local: true)  do |f| %>
		<p>ジャンル
			<%= f.label :name %>
			<%= f.text_field :name %>
		</p>
		<label>
			<%= f.radio_button :status, true %>
				<%= f.label :status, "有効", {value: :true, style: "display: inline-block;"} %>
		</label>
		<label>
			<%= f.radio_button :status, false %>
				<%= f.label :status, "無効", {value: :false, style: "display: inline-block;"} %>
		</label>
		<%= f.submit %>
		<% end %>
	</div>
	<table>
		<tr>
			<th>ジャンル</th>
			<th>状態</th>
			<th></th>
		</tr>
		<%if @genres.present? %>
		<% @genres.each do |genre| %>
		<tr>
			<td><%= genre.name %></td>
			<td><%= genre.status %></td>
			<td><%= link_to "編集する",edit_admins_genre_path(genre.id) %></td>
		</tr>
		<% end %>
		<% end %>
	</table>
</div>