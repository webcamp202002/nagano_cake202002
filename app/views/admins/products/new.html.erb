<h1>商品　新規登録画面</h1>
<%= form_for(admins_products_path) do |f| %>
<% if @product.errors.any? %>
	<h3><%= @product.errors.count %>error occurrence</h3><!--エラーメッセ-->
	<ul>
		<% @product.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
<% end %>
    <div class="field">
	<%= f.label :image %>
	<%= f.attachment_field :image %>

	<div class="field row">
		<%= f.label :name %>
		<%= f.text_field :name, class: "col-xs-12 book_title" %>
	</div>

	<div class="field row">
		<%= f.label :introduction %>
		<%= f.text_area :introduction, class: "col-xs-12 book_body" %>
	</div>

	<div class="field row">
		<%= f.label :genre %> 		<%= f.select :genre %>
	</div>

	<div class="field row">
		<%= f.label :unit_price %>
		<%= f.text_area :unit_price %>
	</div>

	<div class="field row">
		<%= f.label :sale_status %>
		<%= f.select :sale_status %>
	</div>

	<div class="actions row">
		<%= f.submit class: "btn btn-primary col-xs-12" %>
	</div>
<% end %>