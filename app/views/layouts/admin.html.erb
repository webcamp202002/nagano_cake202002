<!DOCTYPE html>
<html>
  <head>
    <title>namespace - admin</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
<body>

	 <header class="navbar-brand-center" style="background-color: #FFAD90;">
    <div class="container">
      <div class="navbar-nav ml-auto mr-auto"></div>
        <em><h2 class="navbar-brand navbar-right">NAGANO CAKE</h2><em>
        </div>
        </header>
            <!--if文でサインインとアウト時の表示を変更-->
            <% if admin_signed_in? %>
            <nav>
          <ul class="nav-list">
             <li class="nav-list-item"><%= link_to '商品一覧', admins_products_path, class: "nav-link disabled" %></li>
             <li class="nav-list-item"><%= link_to '会員一覧', admins_members_path, class: "nav-link disabled" %></li>
             <li class="nav-list-item"><%= link_to '注文履歴', admins_orders_path, class: "nav-link disabled" %></li>
             <li class="nav-list-item"><%= link_to 'ジャンル管理', admins_genres_path, class: "nav-link disabled" %></li>
             <li class="nav-list-item"><%= link_to 'ログアウト', destroy_admin_session_path,method: :delete, class: "nav-link disabled" %></li>
            <div class="search-form">
            <%= form_tag(admins_search_path,method: :get) do %>
  　　　　　　<%= text_field_tag'search[content]' %>
  　　　　　　<%= select_tag 'search[model]',options_for_select({"会員" => "member","商品" => "product","ジャンル" => "genre","注文履歴" => "order"}) %>
  <%= select_tag 'search[how]',options_for_select({ "完全一致" => "match", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partical"}) %>
        <%= submit_tag '検索', class: "btn btn-primary" %>
　　　　　　　<% end %>
</div>
            <% end %>
          </ul>
        </div>
        </nav>
      </div>
    </header>
	<!-- /header -->
<% content_for :content do %>
  <%= yield %>
<% end %>
<%= render template: "layouts/application" %>
</body>
</html>