<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>



　<div class="form-group">
      <label>姓</label>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      <label>名</label>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
    </div>

    <div class="form-group">
      <label>セイ</label>
      <%= f.text_field :kana_last_name, autofocus: true, autocomplete: "kana_last_name" %>
      <label>メイ</label>
      <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "kana_first_name" %>
    </div>

    <div class="form-group">
      <label>郵便番号（ハイフンなし）</label>
      <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %>
    </div>

     <div class="form-group">
      <label >住所</label>
      <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
    </div>

    <div class="form-group">
      <label>電話番号</label>
      <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
    </div>

    <div class="form-group">
      <label>メールアドレス</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="form-group">
      <label>パスワード</label>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "encrypted_password" %>
    </div>

    <div class="form-group">
      <label>パスワード（確認用）</label>
      <%= f.password_field :password_confirmation, autocomplete: "encypted-password" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録", class:"btn btn-success", style:"display:block; margin: 0 auto;"%>
    </div>



<% end %>

<%= render "members/shared/links" %>
