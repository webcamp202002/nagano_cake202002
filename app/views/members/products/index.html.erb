<div class= "container">
	<div class= "row">
		<div lass= "col-md-3">
			<div class="box18">
				<p><h4><u>ジャンル検索</u>
					<%if @genres.present? %>
					<% @genres.each do |genre| %>
					<table>
						<tr>
							<td>
								<%= link_to members_products_path(genre.id) do %>
								<%= genre.name %></p></h4>
								<% end %>
							</td>
						</tr>
					</table>
					<% end %>
					<% end %>
				</end>
			</div>
		</div>
	

			<div  class= "col-md-9">
					<h2><strong>商品一覧</strong></h2>


					<%if @products.present? %>
					<div class="item">
					<% @products.each do |product| %>
					<div class="item">
						<div class="col-xs-3 each_item">
							<%= link_to members_product_path(product) do %>
							<%= attachment_image_tag(product, :image, size: "300x200") %>
							<% end %>
							<p><%= product.name %></p>
							<p>¥<%= product.unit_price %></p>
						</div>
					</div>
					<% end %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>