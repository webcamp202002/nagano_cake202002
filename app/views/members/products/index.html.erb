<div class="col-xs-9">
	<div style = "text-align: center">
	<h2><strong>商品一覧</strong></h2>
	

	<%if @products.present? %>

			<% @products.each do |product| %>
					<div class="item">
						<div class="col-xs-3 each_item">
						<%= link_to members_product_path(product) do %>
						  <%= attachment_image_tag product, :image, style:"width:100%; bottom: 45px;" %>
						<% end %>
						<%= product.name %>
						<p>¥<%= product.unit_price %></p>
					</div>
				</div>
			<% end %>
			<% end %>
	</div>
</div>
