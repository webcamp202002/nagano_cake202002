<h4>配送先登録/一覧></h4>
<%= form_for(@destination) do |f| %>
<table>
	<tr>
		<th>郵便番号(ハイフンなし)</th>
		<td><%= f.text_field :postcode %></td>
	</tr>
	<tr>
		<th>住所</th>
		<td><%= f.text_field :address %></td>
	</tr>
	<tr>
		<th>宛名</th>
		<td><%= f.text_field :name %></td>
	</tr>
</table>
<%= f.submit class: "btn btn-primary col-xs-12" %>
<% end %>