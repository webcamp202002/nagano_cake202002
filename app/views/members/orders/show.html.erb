<div class="row" style= "width: 80%; margin: 20px auto;">
	<div  class= "col-md-9">
		<div class="row" style= "width: 100%; margin: 20px auto;">
			<div class="form-horizontal">
				<h4 style="margin-bottom: 20px; border-left: 2px solid #2D6F4C; padding: 10px;">注文履歴詳細</h4>
			</div>
		</div>
	</div>
</div>
<div  class= "col-md-3">
	<div class="container" style="width:80%; height:80%; ">
<table class="table table-bordered">
	<h1>注文情報</h1>
	<tr>
		<th>注文日</th>
		<td><%= l @order.created_at, format: :short %></td>
	</tr>
	<tr>
		<th>配送先</th>
		<td>
			〒<%= @order.postcode %><br>
			<%= @order.address %><br>
			<%= @order.name %>
		</td>
	</tr>
	<tr>
		<th>支払い方法</th>
		<td><%= @order.payment_method_i18n %></td>
	</tr>
	<tr>
		<th>ステータス</th>
		<td><%= @order.order_status_i18n %></td>
	</tr>
</table>
</div>
</div>
<table class="table table-bordered">
	<h1>請求情報</h1>
	<tr>
		<th>商品合計</th>
		<th>配送料</th>
		<th>ご請求額</th>
	</tr>
	<tr>
		<td><%= @order.billing_amount %></td>
		<td><%= @order.postage %></td>
		<td><%= @order.billing_amount + @order.postage %></td>
	</tr>
</table>
<table class="table table-bordered">
	<h1>注文内容</h1>
	<tr>
		<th>商品</th>
		<th>単価（税込）</th>
		<th>個数</th>
		<th>小計</th>
	</tr>
	<tr>
		<% @order.order_products.each do |order_product| %>
		<td><%= order_product.product.name %></td>
		<td><%= (order_product.product.unit_price * 1.1).round %></td>
		<td><%= order_product.quantity %></td>
		<td><%= (order_product.product.unit_price * 1.10 * order_product.quantity).to_i.to_s(:delimited)%></td>
	</tr>
	<% end %>
</table>



