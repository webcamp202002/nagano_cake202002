<h4>注文履歴詳細</h4>
<table class="table table-bordered">
	<tr>
		<th>注文日</th>
		<th>配送先</th>
		<th>支払い方法</th>
		<th>ステータス</th>
	</tr>
	<tr>
		<td><%= l order.created_at, format: :short %></td>
		<td>
			<%= @order.postcode %>
			<%= @order.address %>
			<%= @order.name %>
		</td>
		<td><%= @order.payment_method_i18n %></td>
		<td><%= @order.status_i18n %></td>
	</tr>
</table>
<table>
	<h1>請求情報</h1>
	<tr>
		<th>商品合計</th>
		<th>配送料</th>
		<th>ご請求額</th>
	</tr>
	<tr>
		<td><%= @order.billing_amount %></td>
		<td><%= @order.postage %></td>
		<td><%= @order.billing_amount + @order.postage %></td>
	</tr>
</table>
<table>
	<h1>注文内容</h1>
	<tr>
		<th>商品</th>
		<th>単価（税込）</th>
		<th>個数</th>
		<th>小計</th>
	</tr>
	<tr>
		<td><%= @order.product.name %></td>
		<td><%= @order.product.unit_price * 1.1).round %></td>
		<td><%= @order.product.quantity %></td>
		<td><%= (
		@order.product.unit_price * 1.10 * cart_product.quantity).to_i.to_s(:delimited)%></td>
	</tr>
</table>


