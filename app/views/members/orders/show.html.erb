<style>
th {
	background: #FFAD90;
	text-align: center;
	vertical-align: middle;
}

td {
	text-align: center;
}
</style>

<div class="row" style= "width: 80%; margin: 20px auto;">
	<div  class= "col-md-9">
		<div class="row" style= "width: 100%; margin: 20px auto;">
			<div class="form-horizontal">
				<h4 style="margin-bottom: 20px; border-left: 2px solid #2D6F4C; padding: 10px;">注文履歴詳細</h4>
			</div>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class= "col-md-7">
			<table class="table table-bordered">
				<h4>注文情報</h4>
				<tr>
					<th>注文日</th>
					<td><%= l @order.created_at, format: :short %></td>
				</tr>
				<tr>
					<th>配送先</th>
					<td>
						〒<%= @order.postcode %><br>
						<%= @order.address %><br>
						<%= @order.name %>
					</td>
				</tr>
				<tr>
					<th>支払い方法</th>
					<td><%= @order.payment_method_i18n %></td>
				</tr>
				<tr>
					<th>ステータス</th>
					<td><%= @order.order_status_i18n %></td>
				</tr>
			</table>
		</div>
		<div class= "col-md-5">
		<table class="table table-bordered">
			<h4>請求情報</h4>
			<tr>
				<th>商品合計</th>
				<td><%= @order.billing_amount %>円</td>
			</tr>
			<tr>
				<th>配送料</th>
				<td><%= @order.postage %>円</td>
			</tr>
			<tr>
				<th>ご請求額</th>
				<td><%= @order.billing_amount + @order.postage %>円</td>
			</tr>
		</table>
		</div>
		<div class= "col-md-8">
		<table class="table table-bordered">
			
			<h4>注文内容</h4>
			<tr>
				<th>商品</th>
				<th>単価（税込）</th>
				<th>個数</th>
				<th>小計</th>
			</tr>
			<tr>
				<% @order.order_products.each do |order_product| %>
				<td><%= order_product.product.name %></td>
				<td><%= (order_product.product.unit_price * 1.1).round %>円</td>
				<td><%= order_product.quantity %></td>
				<td><%= (order_product.product.unit_price * 1.10 * order_product.quantity).to_i.to_s(:delimited)%>円</td>
			</tr>
			<% end %>
		</table>
	</div>
	</div>
</div>



