<div class="row" style= "width: 80%; margin: 20px auto;">
	<div class="form-horizontal">
		<h4 style="margin-bottom: 20px; border-left: 2px solid #2D6F4C; padding: 10px;">注文情報確認画面</h4>
	</div>
</div>
<div class="col-md-8">
	<table class="table table-bordered" >
		<thead>
		<tr>
			<th>商品名</th>
			<th>単価(税込)</th>
			<th>数量</th>
			<th>小計</th>
		</tr>
	</thead>
		<%if @cart_products.present? %>
		<% @cart_products.each do |cart_product| %>
		<tbody>
		<tr>
			<td><%= attachment_image_tag cart_product.product, :image, style:"width:100px; bottom: 5px;" %><%= cart_product.product.name %></td>
			<td><%= (cart_product.product.unit_price * 1.1).round  %></td>
			<td>
				<%= cart_product.quantity %></td>
				<td><%= (cart_product.product.unit_price * 1.10 * cart_product.quantity).to_i.to_s(:delimited) %>円 </td>
			</tr>
		</tbody>
	</table>
	</div>
	<% end %>
	<% end %>
	<div class="col-md-4">
	<table class="table table-bordered" >
		<tr>
			<th>送料</th>
			<th>合計</th>
			<th>請求</th>
		</tr>
		<tr>
			<td><%= @order.postage %></td>
			<td><%= (@total_price * 1.1).round %></td>
			<td><%= @order.billing_amount %></td>
		</tr>
	</table>
</div>

	<div>支払い方法
		<%= @order.payment_method_i18n %>
	</div>
	<div>お届け先
		<%= @order.postcode %><%= @order.address %><%= @order.name %>
	</div>
