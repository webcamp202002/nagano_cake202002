			<%if @products.present? %>
			<% @products.shuffle.first(4).each do |product| %>
		    <div class="col-md-3 float-left">
					<p><%= attachment_image_tag(product, :image, size: "300x200") %></p>
					<p class= "size"><%= product.name %></p>
					<p class= "size"><%= product.unit_price %>円(税抜)</p>
			</div>
			<% end %>
			<% end %>
	      </div>
		</div>
		<div>
			<%= link_to "もっと見る",new_member_session_path,class: "btn btn-primary col-xs-12,col-xs-offset-1" %>
